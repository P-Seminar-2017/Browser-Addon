{
  "manifest_version": 2,

  "name": "Gymlapp Hausaufgaben Planer",
  "description": "Gymlapp Hausaufgaben Planer",
  "version": "1.0",
  "icons": {
    "16": "img/icon.png",
    "48": "img/icon.png",
    "128": "img/icon.png"
  },

  "applications": {
    "gecko": {
      "id": "gymlap_homework@gmail.com",
      "strict_min_version": "42.0"
    }
  },

  "content_scripts": [{
    "matches": [
      "<all_urls>",
      "*://neilo.webuntis.com/WebUntis/*"
    ],
    "js": [
      "js/jquery.min.js",
      "js/content.js"
    ]
  }],

  "permissions": [
    "storage",
    "<all_urls>"
  ],

  "options_ui": {
    "page": "options.html"
  },

  "browser_action": {
    "default_icon": "img/icon.png",
    "default_popup": "popup.html"
  }
}
